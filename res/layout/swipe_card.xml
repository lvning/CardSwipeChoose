<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:lv="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/cardlayout"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/fail_card" />

    <com.yiqivr.cardswipechoose.widget.CircleProgress
        android:id="@+id/top_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/cardlayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        lv:backColor="@android:color/black"
        lv:centerPic="@drawable/recommend_app_icon"
        lv:foreColor="@color/green" />

    <com.yiqivr.cardswipechoose.widget.CircleProgress
        android:id="@+id/down_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/cardlayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-30dp"
        lv:backColor="@android:color/black"
        lv:centerPic="@drawable/recommend_app_icon"
        lv:foreColor="@color/red" />

</RelativeLayout>